<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signupbkb"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/signup_title_TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/_27sdp"
        android:text="@string/signup_title"
        android:textColor="@color/white"
        android:textSize="@dimen/_36ssp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/signup_title_TV" />

    <EditText
        android:id="@+id/name"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_40sdp"

        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/name_hint"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signup_title_TV" />

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableStart="@drawable/ic_baseline_email_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/email_hint"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <EditText
        android:id="@+id/national_id"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_add_card_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/national_id_hint"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/email" />

    <EditText
        android:id="@+id/phone_num"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_phone_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/phone_num_hint"
        android:inputType="phone"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/national_id" />

    <TextView
        android:id="@+id/gender_TV"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:fontFamily="serif"
        android:text="@string/gender"
        android:textColor="@color/white"
        android:textSize="@dimen/_15ssp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_num" />

    <RadioGroup
        android:id="@+id/gender_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_TV"

        >

        <RadioButton
            android:id="@+id/male_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="@string/male_gender"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold|italic" />

        <RadioButton
            android:id="@+id/female_radio_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:fontFamily="serif"
            android:text="@string/female_gender"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold|italic" />
    </RadioGroup>

    <TextView
        android:id="@+id/city_drop_down_menu"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:hint="@string/select_hint"
        app:hintTextColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gender_radio_group"

        />

    <EditText
        android:id="@+id/pass"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/pass_hint"
        android:inputType="textPassword"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/city_drop_down_menu" />

    <EditText
        android:id="@+id/confirm_pass"
        android:layout_width="@dimen/_270sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="@dimen/_9sdp"
        android:fontFamily="serif"
        android:hint="@string/confirm_pass_hint"
        android:inputType="textPassword"
        android:padding="@dimen/_6sdp"
        android:textColor="@color/black"
        android:textColorHint="@color/white"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pass" />

    <Button
        android:id="@+id/login_Text_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@android:color/transparent"
        android:fontFamily="serif"
        android:padding="@dimen/_8sdp"
        android:text="@string/have_acc"
        android:textColor="@color/black"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass" />

    <Button
        android:id="@+id/signup_submit_btn"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_20sdp"
        android:backgroundTint="@color/black"
        android:drawableLeft="@drawable/ic_baseline_arrow_right_alt_24"
        android:padding="@dimen/_10sdp"
        app:cornerRadius="@dimen/_80sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/confirm_pass" />
</androidx.constraintlayout.widget.ConstraintLayout>